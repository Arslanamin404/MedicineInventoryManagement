generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id           Int      @id @default(autoincrement())
  product_code Int      @unique
  product_name String
  generic_name String
  manufacturer String?
  pack_size    String
  category     String
  expiry_date  DateTime
  quantity     Int      @default(0)
  mrp          Decimal  @db.Decimal(10, 2)
  rate         Decimal  @db.Decimal(10, 2)
  discount     Decimal  @db.Decimal(5, 2)
  tax          Decimal  @db.Decimal(5, 2)
  gross_amount Decimal  @db.Decimal(10, 2)
  final_amount Decimal  @db.Decimal(10, 2)
  final_rate   Decimal  @db.Decimal(10, 2)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  // index added for faster search
  @@index([product_code])
  @@index([product_name])
  @@index([generic_name])
}
